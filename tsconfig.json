{
  "compilerOptions": {
    "module": "es2015",
    "target": "es5",
    "sourceMap": true,
    "moduleResolution": "node",
    "declaration": false,
    "noImplicitAny": false,
    "allowJs": false,
    "outDir": "build/js/",
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es5", "es2015", "dom", "dom.iterable", "scripthost"],
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "server"
  ],
  "include": [
    "src/**/*.ts"
  ]
}