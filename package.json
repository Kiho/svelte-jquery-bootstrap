{
  "name": "svelte-ts-bootstrap",
  "version": "1.0.0",
  "description": "Svelte TS Bootstrap",
  "files": [
    "index.html"
  ],
  "scripts": {
    "mkdir": "mkdirp ./server/public",
    "mkdir:docs": "mkdirp ./docs",
    "build": "npm run mkdir && rollup -c && npm run copy-file",
    "build:dev": "npm run mkdir && rollup -c && npm run copy-assets",
    "build:min": "SET NODE_ENV=production&& npm run mkdir && rollup -c && npm run copy-file",
    "build:docs": "SET NODE_ENV=production&& npm run mkdir:docs && rollup -c && npm run copy-docs-file",
    "copy-docs-images": "copyfiles -f ./src/assets/images/* ./docs/images",
    "copy-docs-vendor": "cpx src/vendor/**/* ./docs/vendor",
    "copy-docs-js": "cpx src/assets/js/**/* ./docs/js",
    "copy-docs-bundle": "cpx ./server/public/bundle.* ./docs",
    "copy-docs-file": "copyfiles ./index.html ./docs  && npm run copy-docs-images  && npm run copy-docs-js && npm run copy-docs-vendor && npm run copy-docs-bundle",
    "copy-images": "copyfiles -f ./src/assets/images/* ./server/public/images",
    "copy-vendor": "cpx src/vendor/**/* ./server/public/vendor",
    "copy-js": "cpx src/assets/js/**/* ./server/public/js",
    "copy-file": "copyfiles ./index.html ./server/public  && npm run copy-images  && npm run copy-js && npm run copy-vendor",
    "clearn": "rimraf ./server/public",
    "watch": "rollup -c -w",
    "serve:local": "live-server --cors --port=8081 --proxy=/api:http://127.0.0.1:5000/api --watch=./server/public/bundle.js,./server/public/bundle.css,./server/public/index.html server/public",
    "serve:heroku": "SET HEROKU_URL=https://whispering-brook-33382.herokuapp.com&& live-server --cors server/public", 
    "serve:docs": "SET HEROKU_URL=https://whispering-brook-33382.herokuapp.com&& live-server --cors docs",    
    "serve-api": "node server/index.js",
    "start": "npm-run-all --parallel watch serve:local",
    "start:heroku": "npm-run-all --parallel watch serve:heroku",
    "start:docs": "npm-run-all --parallel watch serve:heroku"
  },
  "keywords": [
    "svelte",
    "bootstrap",
    "typescript",
    "boilerplate",
    "crud"
  ],
  "author": "Kiho Chang",
  "license": "MIT",
  "devDependencies": {
    "@types/datatables.net": "^1.10.1",
    "@types/es6-promise": "0.0.32",
    "@types/history": "^2.0.41",
    "@types/jquery": "^2.0.41",
    "@types/toastr": "^2.1.33",
    "async-to-gen": "^1.3.2",
    "babel-runtime": "^6.23.0",
    "copy-dir": "^0.3.0",
    "copyfiles": "^1.2.0",
    "cpx": "^1.5.0",
    "cross-env": "^3.2.4",
    "dateformat": "^2.0.0",
    "es6-promise": "^3.3.0",
    "history": "^4.6.1",
    "install": "^0.8.7",
    "live-server": "^1.2.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.5.1",
    "npm": "^4.0.3",
    "npm-run-all": "^4.0.2",
    "rimraf": "^2.6.1",
    "rollup": "^0.41.6",
    "rollup-plugin-async": "^1.2.0",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-replace": "^1.1.1",
    "rollup-plugin-scss": "^0.2.0",
    "rollup-plugin-svelte": "^1.6.0",
    "rollup-plugin-typescript": "^0.8.1",
    "rollup-plugin-uglify": "^1.0.1",
    "rollup-watch": "^3.2.2",
    "route-parser": "0.0.5",
    "typescript": "2.2.2",
    "uglify-js": "github:mishoo/UglifyJS2#harmony"
  },
  "dependencies": {
    "body-parser": "^1.15.2",
    "express": "^4.14.0"
  },
  "config": {
    "assetsPublicPath": "/assets/"
  }
}
